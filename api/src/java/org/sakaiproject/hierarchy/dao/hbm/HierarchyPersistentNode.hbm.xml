<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <!-- put your value object in the class name, 
      the table name is optional but you should specify it to avoid collisions -->
   <class name="org.sakaiproject.hierarchy.dao.model.HierarchyPersistentNode" table="HIERARCHY_NODE">

      <!-- create the primary key id, using native is typically the best way -->
        <id name="id" type="java.lang.Long" unsaved-value="null">
            <column name="ID" />
            <generator class="native" />
        </id>
      <property name="name" type="string" length="255" not-null="true" />
      <property name="hierarchyId" type="string" length="255" not-null="true" index="HIERARCHY_NODE_HID" />
      <property name="directParentIds" type="text" />
      <property name="parentIds" type="text" />
      <property name="directChildIds" type="text" />
      <property name="childIds" type="text" />
   </class>
</hibernate-mapping>
